@model E_Shop_MVC.ViewModels.UserIndexViewModel
@{
    ViewData["Title"] = "Användare";
}


<!-- SECTION -->
<div class="section">
    <!-- container -->
    <div class="container">

        <div id="SelectedPage"></div>
        <div id="CurrentPage">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col" style="width: 330px;">Id</th>


                        <th scope="col" style="width: 330px;">Användarnamn</th>

                        <th scope="col" style="width: 350px;">Roller</th>
                        <th scope="col"></th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model.Users)
                    {
                    <tr>
                        <th scope="row">@user.Id</th>
                        <td>@user.UserName</td>
                        <td>
                            
                            <ul>
                                @foreach (var role in user.Roles)
                                {
                                    <li>@role</li>
                                }
                            </ul>
                        </td>
                        <td><a asp-controller="User" asp-action="Edit" asp-route-id="@user.Id" type="button" class="btn btn-primary btn-sm">Ändra</a></td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>

        <div id="div_position"></div>
        <a asp-controller="User" asp-action="New" type="button" class="btn btn-primary btn-sm">Ny Användare</a>
