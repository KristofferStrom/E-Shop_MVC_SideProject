@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager


    @if (SignInManager.IsSignedIn(User))
    {
<ul class="header-links pull-right" style="margin-top: 12px;">
    <li><a asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage" style="font-size: 13px;"><i class="fa fa-user"></i>@User.Identity.Name</a></li>
    <li class="nav-item" style="font-size: 13px;">
        <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new {area = ""})">
            <button type="submit" style="background-color: #1E1F29; border: none; color: white; font-weight: 500;">Logga ut</button>
        </form>
    </li>
</ul>
    }
    else
    {
    <ul class="header-links pull-right" style="margin-top: 12px;">
        <li><a asp-area="Identity" asp-page="/Account/Login" style="font-size: 13px;"><i class="fa fa-user"></i> Logga in</a></li>
        
    </ul>

    }

